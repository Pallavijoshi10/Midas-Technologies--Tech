<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme" />

    <ImageView
        android:id="@+id/imgPhoto_pd"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/noimage" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPhoto_pd"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvName_pd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="Name"
                android:textColor="#333"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCode_pd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName_pd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="Code"
                android:textColor="#333"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCat_pd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCode_pd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="Category"
                android:textColor="#333"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvPrice_pd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCat_pd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="Price"
                android:textColor="#333"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDesc_pd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPrice_pd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="Description"
                android:textColor="#333"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvQty_pd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDesc_pd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="Qty"
                android:textColor="#333"
                android:textSize="20sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tvColor_pd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvQty_pd"
        android:layout_marginTop="2dp"
        android:text="Color"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvSize_pd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvColor_pd"
        android:layout_marginTop="2dp"
        android:text="Size"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvID_pd"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_toRightOf="@+id/imgPhoto_pd"
        android:text="ID"
        android:textSize="20sp"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_shopping_cart_white_24dp" />


</RelativeLayout>